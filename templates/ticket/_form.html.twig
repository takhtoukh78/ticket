												 {{ form_row(Ticketform.Titre, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Adresse</label>
												 {{ form_row(Ticketform.Adresse, { 'attr': {'class': 'form-control'} }) }}
