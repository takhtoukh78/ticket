{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tele</th>
                <th>Adresse_pa</th>
                <th>TypePanne</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Email</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.Nom }}</td>
                <td>{{ contact.Prenom }}</td>
                <td>{{ contact.Tele }}</td>
                <td>{{ contact.AdressePa }}</td>
                <td>{{ contact.typePanne }}</td>
                <td>{{ contact.description }}</td>
                <td>{{ contact.photo }}</td>
                <td>{{ contact.Email }}</td>
                <td>{{ contact.date ? contact.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}
