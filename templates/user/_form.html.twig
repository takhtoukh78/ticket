{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(form) }}
<div class="modal-body">
								<form>
                                
									<div class="row">
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Nom <span class="text-danger">*</span></label>
												 {{ form_row(form.nom, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Prénom</label>
												 {{ form_row(form.prenom, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Role <span class="text-danger">*</span></label>
											 {{ form_row(form.role_utilisateur, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Email <span class="text-danger">*</span></label>
												 {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Mot de passe</label>
											 {{ form_row(form.password, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Ville</label>
												{{ form_row(form.ville, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Adresse</label>
												 {{ form_row(form.adresse, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">  
											<div class="form-group">
												<label class="col-form-label"> Date d'embauche <span class="text-danger">*</span></label>
												 {{ form_row(form.date_embauche, { 'attr': {'class': 'form-control datetimepicker'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Téléphone </label>
												{{ form_row(form.telephone, { 'attr': {'class': 'form-control'} }) }}
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group">
												<label class="col-form-label">Entreprise</label>
											</div>
										</div>
										</div>
                                        <div style="margin-left : 35%;">
                                        <button type="submit" class="btn btn-primary submit-btn">{{ button_label|default('Save') }}</button> 
									</div>
                                    </div>
        
           
            
        
     
       {{ form_end(form) }}
{% endblock %}
